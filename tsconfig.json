{
  "compilerOptions": {
    "target": "ES5",
    "module": "ESNext",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": [ "./node_modules/@types" ]
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"],
}
